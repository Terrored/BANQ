
@{
    ViewBag.Title = "ConfirmationPrompt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row mt-5 mx-0">
    <div class="alert alert-primary" role="alert">
        @if (ViewBag.Message != null)
        {
            <h4 class="display-4 text-center">@ViewBag.Message</h4>

            <form method="post" class="mt-4" action="@Url.Action("ConfirmCredit", "Credits")">
                <button class="btn btn-primary" type="submit">Confirm</button>
            </form>
            <a href="@Url.Action("Index", "UserInfo")">I'll do it later</a>
        }
    </div>
</div>




