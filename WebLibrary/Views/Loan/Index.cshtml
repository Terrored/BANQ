@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-center">

    <div class="col-md-4">
        <div class="jumbotron py-5">

            <form class="ml-1" id="loanForm">
                <h3 class="display-4 mb-5" align="center">New Loan</h3>
                <label for="loanAmount">Loan amount</label>
                <div class="input-group mb-3">
                    
                    <input type="text" class="form-control" id="loanAmount" />
                    <div class="input-group-append">
                        <span class="input-group-text">$</span>
                    </div>

                </div>
                <label for="totalInstallments">Total installments</label>
                <div class="input-group mb-3">
                    <input type="number" class="form-control" id="totalInstallments" />
                </div>
                <label for="installmentAmount">Installment amount</label>
                <div class="input-group mb-3">
                    <input disabled="disabled" type="text" class="form-control" id="installmentAmount" />
                    <div class="input-group-append">
                        <span class="input-group-text">$</span>
                    </div>
                </div>

                <p onclick="submit()" class="btn btn-primary btn-block">Take a loan!</p>
            </form>

        </div>
    </div>
    <div class="col-md-8">
        <div class="jumbotron">
            
            <table id="loans" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Loan amount</th>
                    <th>Loan amount left</th>
                    <th>Installment amount</th>
                    <th>Installments left</th>
                    <th>Next installment date</th>
                    <th>Pay installment</th>
                </tr>
                </thead>
            </table>
            <p id="payInstallment" class="btn btn-primary">Pay Installment</p>
        </div>
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
<script>

    $(document).ready(function() {


        $('#loans').DataTable({
            "ajax": { url: "/api/Loan/GetLoans", dataSrc: "" },
            "paging": false,
            "ordering": false,
            "info": false,
            "searching": false,
            "columns": [
                { "data": "loanAmount" },
                { "data": "loanAmountLeft" },
                { "data": "installmentAmount" },
                { "data": "installmentsLeft" },
                { "data": "nextInstallmentDate", "render": function(data, type, row, meta) {

                    return data.substring(0,10);
                    }},
                {
                    "data": "id",
                    "render": function(data, type, row, meta) {

                        return "<p class='btn btn-primary payInstallment' value='" + data + "'>Pay!</p>";
                    }
                }

            ]
        });


        $("#loans tbody").on("click",".payInstallment",function() {
            var loanId = $(this).attr('value');
            console.log(loanId);
            console.log("XDD");
            $.ajax({
                type: "POST",
                url: "/api/Loan/PayInstallment",
                data: {
                    loanId: loanId
                }
            }).done(function() {
                swal.fire('Cool!', 'Installment has been payed', 'success');
                var table = $("#loans").DataTable();
                table.ajax.reload();
                });

            
            return false;
        });

    });

    $("#loanForm").change(function() {
        calculate();
    });
   


    function calculate() {
        var loanAmount = $("#loanAmount").val();
        var totalInstallments = $("#totalInstallments").val();
        console.log(loanAmount);
        console.log(totalInstallments);
        var installmentAmount = (loanAmount * (100 + 10) / 100) / totalInstallments;

           
        console.log(installmentAmount);
        $("#installmentAmount").val(installmentAmount);

    }

   

    function submit() {
        var dataForm = {
            loanAmount: $('#loanAmount').val(),
            installmentAmount: $('#installmentAmount').val(),
            totalInstallments: $('#totalInstallments').val()
        };
        $.ajax({
            type: "POST",
            url: "/api/Loan/TakeLoan",
            data: dataForm
        }).done(function (data) {
            
            Swal.fire('Great!', data.message, 'success');
            

        });
    }

</script>
