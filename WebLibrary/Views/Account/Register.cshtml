@model WebLibrary.Models.RegisterViewModel

<div class="row justify-content-center">
    <div class="col-8">
        <div class="jumbotron py-5 mt-5 visibility3">
            <h3 class="text-center">Create a new account.</h3>
            <hr />
            <div class="row">
                <div class="col-6">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })


                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "E-mail" })
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control my-3", placeholder = "First Name" })
                        @Html.TextBoxFor(m=>m.LastName, new { @class = "form-control my-3", placeholder = "Last name"})
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control my-3", placeholder = "Password" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control my-3", placeholder = "Confirm password" })

                        <div class="form-check mb-3 ml-1">
                            <label>
                                @Html.RadioButtonFor(m => m.Sex, "Male", new { @class = "form-check-input" }) <span>Male</span>
                            </label>
                            <br />
                            <label>
                                @Html.RadioButtonFor(m => m.Sex, "Female", new { @class = "form-check-input" }) <span>Female</span>
                            </label>
                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-primary btn-block" value="Register" />
                        </div>
                    }
                </div>

                <div class="col-6">
                    <h5>Some advertising trash talk</h5>
                </div>
            </div>
            <hr />
            <div class="text-center">
                <h4>Already have an account?</h4>
                @Html.ActionLink("Sign in", "Login", "Account")
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
