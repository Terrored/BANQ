@using WebLibrary.Models
@model LoginViewModel

<div class="row justify-content-center">
    <div class="col-4">
        <div class="jumbotron py-5 mt-5">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="text-center">
                        <h4>Provide Your credentials</h4>
                    </div>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control my-3", type = "email", placeholder = "E-mail" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control my-3", placeholder = "Password" })

                    <div class="form-check pl-1 mt-4">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Log in" class="btn btn-primary btn-block" />
                    </div>

                    <hr />
                    <div class="text-center">
                        <h4>Don't have an account?</h4>
                        @Html.ActionLink("Register as a new user", "Register")
                    </div>
                    @* Enable this once you have account confirmation enabled for password reset functionality
                        <p>
                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                        </p>*@
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}